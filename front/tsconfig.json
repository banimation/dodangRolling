{
    "compilerOptions": {
        "exactOptionalPropertyTypes": true,
        "module": "CommonJS",
        "lib": ["ESNext", "DOM"],
        "noEmitOnError": true,
        "noUnusedParameters": true,
        "outDir": "public/dist",
        "strict": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}